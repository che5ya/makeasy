import GetNext from "./GetNext";

describe('GetNext function', () => {
    const data = {
        info: {
            name: 'John Doe',
            email: 'john@example.com',
        },
    };

    test('Retrieve value at nested property keys', () => {
        expect(GetNext(data, 'info', 'name')).toBe('John Doe');
        expect(GetNext(data, 'info', 'email')).toBe('john@example.com');
    });

    test('Return last key if rest keys are empty', () => {
        expect(GetNext(data, 'info')).toBe('info');
    });

    test('Return empty string if object or any key in the path is empty or undefined', () => {
        expect(GetNext(data, 'info', 'address')).toBe('');
        expect(GetNext(data, 'info', 'phone')).toBe('');
    });
});
