{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    // Enhance strictness.
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
  }
}
